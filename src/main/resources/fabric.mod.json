{
  "schemaVersion": 1,

  "id": "playground",

  "version": "${version}",

  "name": "Playground",
  "description": "Allows Bedrock to be broken, with or without a custom pickaxe item. Don't fall!",
  "authors": [
    "nokko"
  ],

  "contact": {
    "homepage": "https://nokko.me/",
    "sources": ""
  },

  "license": "CC0-1.0",
  "icon": "assets/playground/icon.png",

  "environment": "*",

  "entrypoints": {
    "main": [
      "me.nokko.playground.Playground::init"
    ]
  },

  "mixins": [
    "playground.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.8.7",
    "fabric": "*",
    "fabric-language-kotlin": "*",
    "minecraft": "1.16.x"
  },

  "suggests": {
    "flamingo": "*"
  },

  "custom": {
    "paradoxconfig": {
      "package": "me.nokko.playground.config",
      "configs": ["PlaygroundConfig"]
    }
  }
}
